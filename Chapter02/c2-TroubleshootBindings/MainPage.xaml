<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c2TroubleshootBindings="clr-namespace:c2_TroubleshootBindings"
             x:Class="c2_TroubleshootBindings.MainPage">

    <ContentPage.BindingContext>
        <c2TroubleshootBindings:MyViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Customers}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*, 100">
                    <Label Text="{Binding Name}" />
                    <Button Command="{Binding DeleteCustomerCommand}"
                            CommandParameter="{Binding}"
                            Text="Delete"
                            Grid.Column="1" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>